{% extends 'base.html.twig' %}

{% block body %}
	<div>
		<table class="table table-striped">


			<thead>
				<tr>
					<th colspan="3">
						<a href="{{ path('class_add')}}">
							<i class="bi bi-plus-square"></i>
						</a>
					</th>
					<th class="col-md-1">
						<form action="{{ path('class_search')}}" method="POST">
							<input type="search" name="searchValue" ,required placeholder="search by name">
						</form>
					</th>
				</tr>
				<tr>
					<th><input type="checkbox" name="checkbox[]" id="select-all">Check all</th>
					<th>Class Name</th>
					<th>Course</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				<form action="{{ path('class_delete', {'id': 'checkbox'})}}" method="post">

					{% for c in class %}
						<tr>
							<td><input type="checkbox" name="checkbox[]" id="" value="{{ c.id}}"></td>
							<td>
								<a class="text-decoration-none" href="{{ path('class_detail', {'id': c.id})}}">{{ c.name}}</a>
							</td>
							<td>
								<a class="text-decoration-none" href="{{ path('course_detail', {'id': c.course.id})}}">{{ c.course.name}}</a>
							</td>
							<td>
								<a href="{{ path('class_edit', {'id': c.id})}}">
									<i class="bi bi-pencil-square"></i>
								</a>
								{# EDIT #}
							</td>
						</tr>
					</td>
				</tr>
			{% endfor %}
			<td colspan="4">
				<button type="submit">Delete</button>
			</td>
		</form>
	</tbody>
</table></div>{% endblock %}
