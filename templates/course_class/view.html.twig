{% extends 'base.html.twig' %}

{% block body %}
	<div>
		<a class="text-decoration-none" href="{{ path('class_student', {'id': class.id})}}">
			<i class="bi bi-plus-square"></i>Asign Student To Class</a>
	</div>
	{% if class.student|length == 0 %}
		<h3>No student in this class
			<a class='text-decoration-none' href="{{ path('class_detail', {'id': class.id})}}">Click to Back</a>
		</h3>

	{% else %}
		<div>
			<table class='table'>
				<thead>
					<tr>
						<th><input type="checkbox" name="checkbox[]" id="select-all">Check all</th>
						<th>Student ID</th>
						<th class='col-md-3'>Student Name</th>
					</tr>
				</thead>
				<tbody>
					<form action="{{ path('class_student_remove', {'id': class.id})}}" method="post">
						{% for s in class.student %}
							<tr>
								<td><input type="checkbox" name="checkbox[]" id="" value="{{ s.id}}"></td>
								<td>{{s.id}}</td>
								<td>
									<a class="text-decoration-none" href="{{ path('student_detail', {'id': s.id})}}">{{ s.name}}</a>
								</td>
							</tr>
						{% endfor %}
						<td colspan='3'>
							<button type="submit">Remove</button>
						</td>
					</form>
				</tbody>
			</table>
		</div>
		<a class='text-decoration-none' href="{{ path('class_detail', {'id': class.id})}}">Click to Back
		</a>
	{% endif %}
{% endblock %}
