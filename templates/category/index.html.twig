{% extends 'base.html.twig' %}
{% block body %}
	<h2 class="text-center ">
		Manage Category</h2>
	<a class="btn btn-secondary mt-4 mb-4" href="{{ path('category_add')}}">
		Add new Category
	</a>
	<div class="form-group col-md-4 mb-3">

		<form class="d-flex" action="{{path('search_category_name')}}" method="POST">
			<input class="form-control me-2 " type="search" name="name" placeholder="Search" aria-label="Search by category name">
			<button class="btn btn-outline-success" type="submit">Search</button>
		</form>
	</div>
	<table class="table">
		<thead>
			<tr>
				<th>ID</th>
				<th>
					Name Category</th>
				<th>Category Image
				</th>
				<th>Code Category</th>
				<th>Edit Category</th>
				<th>Delete Category</th>
			</tr>
		</thead>
		<tbody>
			{% for category in categorys %}
				<tr>
					<td scope="row">{{category.id}}</td>
					<td>{{category.name}}</td>
					<td>
						<a class="btn btn-info" href="{{ path('category_detail', {'id' : category.id }) }}">

							<img src="{{ asset('covers/'~category.image) }}" width="100" height="120">
						</a>
					</td>
					<td>
						{{category.code}}</td>
					{# <td>
											{{category.description}}</td>
										<td> #}


					<td>
						<a class="btn btn-danger" href="{{ path('category_delete', {'id' : category.id }) }}" onclick="return confirm('Do you want to delete this category ?')">
							Delete
						</a>
					</td>

					<td>
						<a class="btn btn-danger" href="{{ path('category_edit', {'id' : category.id }) }}">
							Edit
						</a>
					</td>
				</tr>
			</td>

		{% endfor %}


	</tbody>
</table>{% endblock %}
