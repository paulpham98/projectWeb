{% extends 'base.html.twig' %}

{% block body %}
	<h2 class="text-center"> Manage Course</h2>

	<a class="btn btn-success mt-4 mb-4" href="{{ path('courseDetail_add')}}">
		Add new Course
	</a>
	<div class="form-group col-md-4 mb-3">
		<form class="d-flex" action="{{path('search_course_name')}}" method="POST">
			<input class="form-control me-2 " type="search" name="name" placeholder="Search" aria-label="Search by category name">
			<button class="btn btn-outline-success" type="submit">Search</button>
		</form>
	</div>
	<table class="table">
		<thead>
			<tr>
				<th>
					ID</th>
				<th>
					Course Name</th>
				<th>Image
				</th>
				<th>
					Course Slot</th>
				<th>Delete</th>
				<th>Edit</th>
			</tr>
		</thead>
		<tbody>
			{% for course in courses %}
				<tr>
					<td scope="row">{{course.id}}</td>
					<td>{{course.name}}</td>
					<td>
						<a class="btn btn-secondary" href="{{ path('courseDetail_detail', {'id' : course.id }) }}">
							<img src="{{ asset('covers/'~course.photo) }}" width="100" height="120">
						</a>
					</td>
					<td>
						{{course.slot}}
					</td>
					<td>
						<a class="btn btn-danger" href="{{ path('courseDetail_delete', {'id' : course.id }) }}" onclick="return confirm('Do you want to delete this category ?')">
							Delete
						</a>
					</td>
					<td>
						<a class="btn btn-danger" href="{{ path('courseDetail_edit', {'id' : course.id }) }}">
							Edit
						</a>
					</td>
				</tr>
			</td>

		{% endfor %}


	</tbody>
</table>{% endblock %}
