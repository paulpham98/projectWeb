{% extends 'base.html.twig' %}

{% block body %}
	<div>
		<table class="table">
			<thead>
				<tr>
					<th>Course ID</th>
					<th>Course Name</th>
					<th>Course Description</th>
					<th>Class</th>
					<th>Course Image</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>
						{% if (course.id != null) %}
							{{ course.id}}
						{% endif %}
					</td>
					<td>
						{{ course.name}}
					</td>
					<td>
						{{ course.description}}
					</td>
					<td>
						{% for class in course.class %}
							<a class="text-decoration-none" href="{{ path('class_detail', {'id': class.id})}}">{{ class.name}}</a>
							<br>
						{% endfor %}
					</td>
					<td>
						<img src="{{ asset('images/'~course.image) }}" width="100" height="120">
					</td>
					<td>
						<button>
							<a class="text-decoration-none" href=" {{ path('course_edit', {'id': course.id} )}}">Edit</a>
						</button>
						<br>
						<button>
							<a class="text-decoration-none" href="{{ path('course_delete', {'id': course.id})}}">Delete</a>
						</button>
					</td>
				</tr>
			</tbody>
		</table>
	</div>


{% endblock %}
